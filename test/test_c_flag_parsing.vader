Execute(ParseCFlags should handle parenthesis and quotes):
  AssertEqual
  \ '-Dgoal=9 -Dtest1="('' '')" file1.o -Dtest2=''(` `)'' file2.o -Dtest3=`(" ")` file3.o',
  \ ale#c#ParseCFlags(
  \   ale#path#Simplify(g:dir. '/test_c_projects/makefile_project'),
  \   'gcc -Dgoal=9 '
  \     . '-Dtest1="('' '')" file1.o '
  \     . '-Dtest2=''(` `)'' file2.o '
  \     . '-Dtest3=`(" ")` file3.o '
  \ )
