Before:
  let g:loclist = [
  \ {'lnum': 5, 'col': 5},
  \ {'lnum': 5, 'col': 4},
  \ {'lnum': 2, 'col': 10},
  \ {'lnum': 3, 'col': 2},
  \]
  let g:empty_loclist = []
  let g:ale_loclist_opened = 0
  let g:ale_quickfix_opened = 0

Execute (loclist and openlist):
  let g:ale_set_loclist = 1
  let g:ale_set_quickfix = 0
  let g:ale_open_list = 1
  call ale#list#SetLists(g:empty_loclist)
  AssertEqual 0, g:ale_loclist_opened
  call ale#list#SetLists(g:loclist)
  AssertEqual 1, g:ale_loclist_opened

Execute (loclist without openlist):
  let g:ale_set_loclist = 1
  let g:ale_set_quickfix = 0
  let g:ale_open_list = 0
  call ale#list#SetLists(g:empty_loclist)
  AssertEqual 0, g:ale_loclist_opened
  call ale#list#SetLists(g:loclist)
  AssertEqual 0, g:ale_loclist_opened

Execute (quickfix and openlist):
  let g:ale_set_loclist = 0
  let g:ale_set_quickfix = 1
  let g:ale_open_list = 1
  call ale#list#SetLists(g:empty_loclist)
  AssertEqual 0, g:ale_quickfix_opened
  call ale#list#SetLists(g:loclist)
  AssertEqual 1, g:ale_quickfix_opened

Execute (quickfix without openlist):
  let g:ale_set_loclist = 0
  let g:ale_set_quickfix = 1
  let g:ale_open_list = 0
  call ale#list#SetLists(g:empty_loclist)
  AssertEqual 0, g:ale_quickfix_opened
  call ale#list#SetLists(g:loclist)
  AssertEqual 0, g:ale_quickfix_opened

After:
  unlet g:loclist
  unlet g:ale_loclist_opened
  unlet g:ale_quickfix_opened

