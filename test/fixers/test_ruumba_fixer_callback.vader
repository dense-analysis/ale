Before:
  Save g:ale_eruby_ruumba_executable
  Save g:ale_eruby_ruumba_options

  " Use an invalid global executable, so we don't match it.
  let g:ale_eruby_ruumba_executable = 'xxxinvalid'
  let g:ale_eruby_ruumba_options = ''

  call ale#test#SetDirectory('/testplugin/test/fixers')
  silent cd ..
  silent cd command_callback
  let g:dir = getcwd()

After:
  Restore

  call ale#test#RestoreDirectory()

Execute(The ruumba callback should return the correct default values):
  call ale#test#SetFilename('eruby_paths/dummy.html.erb')

  AssertEqual
  \ {
  \   'command': ale#Escape(g:ale_eruby_ruumba_executable)
  \     . ' --auto-correct --format json --force-exclusion --stdin ' . ale#Escape(ale#path#Simplify(g:dir . '/eruby_paths/dummy.html.erb')),
  \   'process_with': 'ale#fixers#ruumba#ProcessRuumbaOutput',
  \ },
  \ ale#fixers#ruumba#Fix(bufnr(''))

Execute(The ruumba callback should include configuration files):
  call ale#test#SetFilename('eruby_paths/with_config/dummy.html.erb')

  AssertEqual
  \ {
  \   'command': ale#Escape(g:ale_eruby_ruumba_executable)
  \     . ' --config ' . ale#Escape(ale#path#Simplify(g:dir . '/eruby_paths/with_config/.ruumba.yml'))
  \     . ' --auto-correct --format json --force-exclusion --stdin ' . ale#Escape(ale#path#Simplify(g:dir . '/eruby_paths/with_config/dummy.html.erb')),
  \   'process_with': 'ale#fixers#ruumba#ProcessRuumbaOutput',
  \ },
  \ ale#fixers#ruumba#Fix(bufnr(''))

Execute(The ruumba callback should include custom ruumba options):
  let g:ale_eruby_ruumba_options = '--except Lint/Debugger'
  call ale#test#SetFilename('eruby_paths/with_config/dummy.html.erb')

  AssertEqual
  \ {
  \   'command': ale#Escape(g:ale_eruby_ruumba_executable)
  \     . ' --config ' . ale#Escape(ale#path#Simplify(g:dir . '/eruby_paths/with_config/.ruumba.yml'))
  \     . ' --except Lint/Debugger'
  \     . ' --auto-correct --format json --force-exclusion --stdin ' . ale#Escape(ale#path#Simplify(g:dir . '/eruby_paths/with_config/dummy.html.erb')),
  \   'process_with': 'ale#fixers#ruumba#ProcessRuumbaOutput',
  \ },
  \ ale#fixers#ruumba#Fix(bufnr(''))
